<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">
    <!--app:startDestination="@id/: Aseguro que es esta la primera pantalla-->

    <!--Defino el fragment de Login-->
    <!--Con action defino la ida y la vuelta-->

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.myapplication1.fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />

        <action
            android:id="@+id/action_loginFragment_to_tabFragment"
            app:destination="@id/tabFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <!--Defino el fragment de Register-->
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.myapplication1.fragments.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/tabFragment"
        android:name="com.example.myapplication1.fragments.TabFragment"
        android:label="fragment_tab"
        tools:layout="@layout/fragment_tab" />
    <fragment
        android:id="@+id/contactFragment"
        android:name="com.example.myapplication1.fragments.ContactFragment"
        android:label="Contacto"
        tools:layout="@layout/fragment_contact" />

    <fragment
        android:id="@+id/preferencesFragment"
        android:name="com.example.myapplication1.fragments.PreferencesFragment"
        android:label="Preferencias"
        tools:layout="@layout/fragment_preferences" />
</navigation>